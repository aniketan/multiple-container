{
    "AWSEBDockerrunVersion":2,
    "containerDefinations":[
        {
            "name":"client",
            "image": "aniketan/multi-client",
            "hostname":"client",
            "essential":false
        },
        {
            "name":"server",
            "image": "aniketan/multi-server",
            "hostname":"api",
            "essential":false
        },
        {
            "name":"worker",
            "image": "aniketan/multi-worker",
            "hostname":"worker",
            "essential":false
        },
        {
            "name":"nginx",
            "image": "aniketan/multi-nginx",
            "hostname":"nginx",
            "essential":true,
            "portMapping":[
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links": ["client","server"]
        }
    ]
}